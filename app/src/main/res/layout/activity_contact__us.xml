<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.enventpc_03.service99.Contact_Us">
    <TextView
        android:id="@+id/contact_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Contact Us"
        android:textSize="40dp"
        android:layout_weight="3"
        android:shadowColor="#00ccff"
        android:shadowRadius="1.5"
        android:shadowDx="1"
        android:shadowDy="1"
        android:textColor="#545454"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"/>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="5dp"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/contact_title"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout">


    </RelativeLayout>

    <TextView
        android:id="@+id/main_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Happy to Help You"
        android:textSize="20dp"

        android:layout_weight="3"
        android:shadowColor="#ffa500"
        android:shadowRadius="1.5"
        android:shadowDx="1"
        android:shadowDy="1"

        android:textColor="#D2691E"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/contact_title"
        android:layout_alignEnd="@+id/contact_title" />

    <TextView
        android:id="@+id/website_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Website : "
        android:textSize="20dp"
        android:phoneNumber="true"
        android:layout_weight="3"
        android:layout_alignTop="@+id/website_url"
        android:layout_alignRight="@+id/contact_no_heading"
        android:layout_alignEnd="@+id/contact_no_heading" />

    <TextView
        android:id="@+id/website_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="www.service99.co.in"
        android:textSize="20dp"
        android:selectAllOnFocus="true"
        android:linksClickable="true"
        android:autoLink="web"
        android:layout_weight="3"
        android:layout_marginTop="141dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_toRightOf="@+id/website_heading"
        android:layout_toEndOf="@+id/website_heading" />

    <TextView
        android:id="@+id/contact_no_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call Us : "
        android:textSize="20dp"
        android:layout_weight="3"
        android:layout_above="@+id/contact_no"
        android:layout_toLeftOf="@+id/main_name"
        android:layout_toStartOf="@+id/main_name" />

    <TextView
        android:id="@+id/contact_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9411107536"
        android:textSize="20dp"
        android:autoLink="phone"
        android:layout_weight="3"
        android:layout_above="@+id/website_heading"
        android:layout_alignLeft="@+id/contact_no2"
        android:layout_alignStart="@+id/contact_no2" />


    <TextView
        android:id="@+id/contact_no2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9411107536"
        android:textColor="#ffa500"
        android:textSize="20dp"
        android:autoLink="phone"
        android:layout_weight="3"
        android:layout_below="@+id/email_us"
        android:layout_toRightOf="@+id/email_us"
        android:layout_toEndOf="@+id/email_us" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email    : "
        android:id="@+id/email_us"
        android:textSize="20dp"
        android:layout_weight="3"
        android:layout_above="@+id/contact_no_heading"
        android:layout_alignLeft="@+id/contact_no_heading"
        android:layout_alignStart="@+id/contact_no_heading" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" support@service99.co.in"
        android:autoLink="email"
        android:id="@+id/email_id"
        android:textSize="20dp"
        android:layout_above="@+id/contact_no_heading"
        android:layout_toRightOf="@+id/contact_no_heading"
        android:layout_toEndOf="@+id/contact_no_heading" />

</RelativeLayout>
