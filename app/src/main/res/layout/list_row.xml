<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_row_selector"
    android:padding="8dp"
     >


    <!-- Title Of Song-->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ticket No.: "
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="15dip"
        android:textStyle="bold"/>

    <!-- Artist Name -->
    <TextView
        android:id="@+id/artist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:textColor="#343434"
        android:textStyle="bold"
        android:layout_marginTop="1dip"
        android:text="Service : " />

    <!-- Rightend Duration -->
    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/artist"
        android:layout_marginRight="5dip"
        android:text="Status : "

        android:textStyle="bold"/>

    <!--&lt;!&ndash; Rightend Arrow &ndash;&gt;-->
    <!--<ImageView android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:src="@drawable/arrow"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:id="@+id/imageView" />-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" ABCDEFGHIJKL "
        android:id="@+id/serial"

        android:layout_toRightOf="@+id/title"
        android:layout_toEndOf="@+id/title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="serviessssss"
        android:id="@+id/service_code"
        android:layout_alignTop="@+id/artist"
        android:layout_alignLeft="@+id/serial"
        android:layout_alignStart="@+id/serial" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="statussssssss"
        android:id="@+id/status"
        android:layout_below="@+id/service_code"
        android:layout_alignLeft="@+id/service_code"
        android:layout_alignStart="@+id/service_code" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  1234512345 "
        android:id="@+id/job_id"
        android:visibility="invisible"
        android:layout_alignTop="@+id/artist"
        android:layout_toRightOf="@+id/service_code"
        android:layout_toEndOf="@+id/service_code"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20/20/2016"
        android:maxLength="10"
        android:id="@+id/date"
        android:layout_below="@+id/artist"
        android:layout_alignRight="@+id/artist"
        android:layout_alignEnd="@+id/artist" />

</RelativeLayout>
